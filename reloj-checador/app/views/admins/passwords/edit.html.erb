<div class="container">
    <div class="row justify-content-center align-items-center" style="height:100vh">
        <div class="col-12 col-sm-12 col-md-4">
            <div class="card" style="border-radius: 1rem; color: #807d77;">
                <div class="card-body">
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                        <div class="form-group">
                          <%= render "admins/shared/error_messages", resource: resource %>
                        </div>
                        <div class="form-group" style="display: none">
                          <%= f.hidden_field :reset_password_token %>
                        </div>
                        <div class="form-group text-center" style="color: #807d77; margin-bottom: 2rem; margin-top: 2rem;">
                          <h4>Change your password</h4>
                        </div>
                        <div class="form-group">
                          <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                          <% end %>
                          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control text-center", style: "border-radius: 1rem; color: #807d77; margin-bottom: 2rem;", placeholder: "NEW PASSWORD", required: "true"  %>
                        </div>
                        <div class="form-group">
                          <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control text-center", style: "border-radius: 1rem; color: #807d77; margin-bottom: 2rem;", placeholder: "NEW PASSWORD CONFIRMATION", required: "true"  %>
                        </div>
                        <%= f.submit "CHANGE MY PASSWORD", class: "form-control text-center", value: "CHANGE MY PASSWORD", style: "color: #807d77; border-radius: 1rem;" %>
                    <% end %>
                </div>
            </div>
        </div>

        <div class="col-12">
          <div class="form-group">
            <%= render "admins/shared/links" %>
          </div>
        </div>
    </div>
</div>
