<% time = Time.new %>
<div class="wrapper" style="margin-top: 2rem;">
  <div class="card p-2 card-time text-center">
    <h4 id="att-new-clock"></h4>
    <%= time.strftime("%Y-%m-%d") %>
  </div>
  <%= form_with(model: attendace) do |form| %>

    <div class="form-group input-attendance">
      <%= form.label :private_number, :class => "form-control" %>
      <%= form.text_field :private_number, :class => "form-control", :placeholder => "Enter your private number", :type => "number"%>
    </div>

    <%= form.submit :class => "btn btn-info btn-block btn-lg"%>

  <% end %>
</div>

<script>
  var clock = document.getElementById("att-new-clock");
  if (clock != undefined)
    setInterval(() => {
      let date = new Date()
      clock.innerHTML = date.toLocaleTimeString();
    },1000);
</script>
