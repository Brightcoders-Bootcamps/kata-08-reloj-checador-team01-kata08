<div class="continer align-content-center ml-1 ml-sm-0 h-100" style="margin-top: 2rem;">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-12 col-sm-12 col-md-10">
            <h4 class="justify-content-center align-items-center">Absences by month</h4>
        </div>
        <div class="col-12 col-sm-12 col-md-10">
            <br>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="text-align: center;">Year</th>
                            <th style="text-align: center;">Month</th>
                            <th style="text-align: center;">Company</th>
                            <th style="text-align: center;">Registered Entries</th>
                            <th style="text-align: center;">Absences</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @absences.each do |absence| %>
                            <% company = @companies.select{|company| company if company.id == absence["company_id"]}.first %>
                            <tr>
                                <td style="text-align: center;"><%=  absence["yyyy"].to_s.split(".")[0] %></td>
                                <td style="text-align: center;"><%=  absence["mm"] %></td>
                                <td style="text-align: center;"><%=  company.name %></td>
                                <td style="text-align: center;"><%=  absence["emp_count"].to_s.split(".")[0] %></td>
                                <td style="text-align: center;"><%=  absence["abs_count"].to_s.split(".")[0] %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
                <div class="media mb-4">
                    <div class="media-body">
                        <%= will_paginate @absences %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-10">
            <div class="form-group">
                <form action="<%= reports_absence_by_month_path(format: :xlsx) %>" method="get">
                    <button class="btn btn-success btn-sm" type="submit" style="color: #ffffff;">Descargar CSV</button>
                </form>
            </div>
        </div>
    </div>
</div>
