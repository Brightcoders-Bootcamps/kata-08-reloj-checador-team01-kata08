<div class="continer justify-content-center align-items-center ml-1 ml-sm-0" style="margin-top: 2rem;">
    <div class="col-12 col-sm-12 col-md-7">
        <h4 class="justify-content-center  align-items-center">Ausencias por mes</h4>
    </div>
    <form class="col-12 col-sm-12 col-md-3" action="<%= reports_absence_by_month_path %>" method="get">
        <div class="row align-content-end ml-0 ml-sm-4">
            <div class="form-group">
                <input type="date" class="form-control" name="date" value="<%= params[:date] %>">
            </div>
            <div class="form-group">
                <button class="btn btn-secondary btn-sm ml-0 ml-3">BUSCAR</button>
            </div>
        </div>
    </form>

    <div class="col-12 col-sm-12 col-md-10">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="text-align: center;">Fecha</th>
                        <th style="text-align: center;">Compañía</th>
                        <th style="text-align: center;">Entradas Registradas</th>
                        <th style="text-align: center;">Ausencias</th>
                    </tr>
                </thead>
                <tbody>
                    <% @abscenes.each do |abscene| %>
                        <tr>
                            <td style="text-align: center;"><%=  abscene.date %></td>
                            <td style="text-align: center;"><%=  abscene.count %></td>
                            <td style="text-align: center;"><%=  0 %></td>
                            <% emp_count = 0 %>
                            <td style="text-align: center;"><%=  (emp_count > 0) ? emp_count : "0" %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="media mb-4">
                <div class="media-body">
                    <%= will_paginate @abscenes %>
                </div>
            </div>
        </div>
        
    </div>

    <div class="col-12 col-sm-12 col-md-10">
        <div class="form-group">
            <form action="<%= reports_att_by_day_path(format: :xlsx) %>" method="get">
                <button class="btn btn-success btn-sm" type="submit" style="color: #ffffff;">Descargar CSV</button>
            </form>
        </div>
    </div>
</div>