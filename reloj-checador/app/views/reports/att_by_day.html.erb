<div class="continer justify-content-center align-items-center ml-1 ml-sm-0" style="margin-top: 2rem;">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-12 col-sm-12 col-md-7">
            <h4 class="justify-content-center  align-items-center">Attendaces by day</h4>
        </div>
        <form class="col-12 col-sm-12 col-md-3" action="<%= reports_att_by_day_path %>" method="get">
            <div class="row align-content-end ml-0 ml-sm-4">
                <div class="form-group">
                    <input type="date" class="form-control" name="date" value="<%= params[:date] %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-secondary btn-sm ml-0 ml-3">search</button>
                </div>
            </div>
        </form>
        <div class="col-12 col-sm-12 col-md-10">
            <br>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="text-align: center;">Date</th>
                            <th style="text-align: center;">IN/OUT numbers</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @attendaces.each do |attendace| %>
                            <tr>
                                <td style="text-align: center;"><%=  attendace.date %></td>
                                <td style="text-align: center;"><%=  attendace.date_count %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
                <div class="media mb-4">
                    <div class="media-body">
                        <%= will_paginate @attendaces %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-10">
            <div class="form-group">
                <form action="<%= reports_att_by_day_path(format: :xlsx) %>" method="get">
                    <input type="hidden" readonly="true" class="form-control" name="date" value="<%= params[:date] %>">
                    <button class="btn btn-success btn-sm" type="submit" style="color: #ffffff;">Download CSV</button>
                </form>
            </div>
        </div>
    </div>
</div>
