<div class="container align-middle">
    <div class="col-12 col-sm-12 col-md-10">
        <h3 class="title font-bold pb-3 mt-3">Promedio horas entrada/salida por mes</h3>
    </div>

    <div class="col-12 col-sm-12 col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Mes</th>
                        <th class="text-center">AÃ±o</th>
                        <th class="text-center">Hora promedio llegada</th>
                        <th class="text-center">Hora promedio salida</th>
                    </tr>
                </thead>
                <tbody>
                    <% @avg_time_by_employees.each do |avg| %>
                        <tr>
                            <td class="text-center"><%=  avg["mm"] %></td>
                            <td class="text-center"><%=  avg["yyyy"].to_s.split(".0")[0] %></td>
                            <td class="text-center"><%=  avg["time_in"] %></td>
                            <td class="text-center"><%=  avg["time_out"] %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="media mb-4">
                <div class="media-body">
                    <%= will_paginate @avg_time_by_employees %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-12 col-md-10">
        <div class="form-group">
            <form action="<%= reports_avg_time_by_employees_path(format: :xlsx) %>" method="get">
                <button class="btn btn-success btn-sm" type="submit">Descargar CSV</button>
            </form>
        </div>
    </div>
</div>
