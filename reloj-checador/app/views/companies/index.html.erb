<p id="notice"><%= notice %></p>


<div class="container">
  <h1 class="title">Companies</h1>

  <div class="content">
    <%= link_to 'New Company', new_company_path, :class => "btn btn-primary" %>
    <table class="table table-striped table-responsive mt-4">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Address</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr scope="row">
            <td><%= company.name %></td>
            <td><%= company.address %></td>
            <td class="button-td">
              <%= link_to company, :class => "btn btn-success" do %>
                <i class="fas fa-eye"></i>Show 
              <% end %>
              <%= link_to edit_company_path(company), :class => "btn btn-warning" do%>
                <i class="fas fa-user-edit"></i>Edit
              <% end %>
                <%= link_to company, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
                <i class="fas fa-trash"></i>Destroy
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>