<%= form_with(model: @company) do |form| %>
  <div class="form-group">
    <%= form.label :name, :class => "form-label" %>
    <%= form.text_field :name, :class => "form-control" + (@company.errors.include?(:name) ? "is-invalid" : "")%>
    <% if @company.errors.include?(:name) %>
      <small class="message-error"><%= @company.errors[:name].join(" ")%></small>
    <%end%>
  </div>

  <div class="form-group">
    <%= form.label :address, :class => "form-label" %>
    <%= form.text_area :address, :class => "form-control" + (@company.errors.include?(:address) ? "is-invalid" : "") %>
    <% if @company.errors.include?(:address) %>
      <small class="message-error"><%= @company.errors[:address].join(" ")%></small>
    <%end%>
  </div>

  <div class="d-flex justify-content-center mt-3 ">
    <%= form.submit :class => "btn btn-primary btn-lg" %>
  </div>
<% end %>