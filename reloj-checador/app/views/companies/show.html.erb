<p id="notice"><%= notice %></p>

<div class="container card p-4">
  <div class="content">
    <div class="list-group p-4">
      <h2 class="text-center p-4"> General info</h2>
      <p class="list-group-item">
        <strong>Name:</strong>
        <%= @company.name %>
      </p>

      <p class="list-group-item">
        <strong>Address:</strong>
        <%= @company.address %>
      </p>

      <p class="list-group-item">
        <strong>Employees Number:</strong>
        <%= @company.employees.count %>
      </p>

      <div class="table table-responsive">
        <strong>Employees:</strong>
        <table class="table table-striped col-12 col-sm-4 mt-3">
          <thead>
            <tr>
              <th scope="col">Name Lastname</th>
            </tr>
          </thead>
          <tbody>
            <% @employees.each do |employee| %>
              <tr>
                <td> <a href="<%= employee_path(employee) %>"><%= employee.name %> <%= employee.lastname %></a> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="media mb-0">
          <div class="media-body">
            <br>
            <%= will_paginate @employees %>
          </div>
        </div>
      </div>      
        
    </div>
  </div>

  <div class="mt-5">
    <%= link_to companies_path, :class => "btn btn-info" do%>
      <i class="fas fa-arrow-left"> </i> Back
    <% end %>
    <%= link_to edit_company_path(@company), :class => "btn btn-info" do%>
      <i class="fas fa-user-edit"></i> Edit
    <% end %>
  </div>
</div>
