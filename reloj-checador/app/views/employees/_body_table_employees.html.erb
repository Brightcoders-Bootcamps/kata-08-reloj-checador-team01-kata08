<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.email %></td>
    <td><%= employee.name %></td>
    <td><%= employee.lastname %></td>
    <td><%= employee.position %></td>
    <td><%= employee.private_number %></td>
    <td><%= employee.active %></td>
    <td><%= @companies.select{|com| com.id = employee.company_id}.first.name %></td>
    <td class="button-td">
      <%= link_to employee, :class => "btn btn-success" do %>
        <i class="fas fa-eye"></i>show 
      <% end %>
      <%= link_to edit_employee_path(employee), :class => "btn btn-warning" do%>
        <i class="fas fa-user-edit"></i>Edit
      <% end %>
      <%= button_to employee, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
        <i class="fas fa-trash"></i>Destroy
      <% end %>
    </td>
  </tr>
<% end %>