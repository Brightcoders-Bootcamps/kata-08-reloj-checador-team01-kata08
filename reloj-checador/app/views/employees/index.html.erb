<div class="container mt-3">
  <h3 class="title">Employees</h3>
  <div class="content">
    <div class="table-responsive">
      <%= link_to 'New Employee', new_employee_path, :class => "btn btn-primary" %>
      <table class="table table-striped table-responsive mt-4">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col">Lastname</th>
            <th scope="col">Position</th>
            <th scope="col">Private number</th>
            <th scope="col">Active</th>
            <th scope="col">Company</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>

        <tbody>
          <%= render "body_table_employees", employee: @employee %>
        </tbody>
      </table>
      <div class="media mb-4">
        <div class="media-body">
          <br>
          <%= will_paginate @employees %>
        </div>
      </div>
    </div>
  </div>
</div>
